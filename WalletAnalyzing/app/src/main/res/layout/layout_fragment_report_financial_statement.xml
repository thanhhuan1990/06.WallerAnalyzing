    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/listview_account_transactions_parent_background"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp"
        android:weightSum="5">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@android:color/transparent"
            android:text="@string/report_financial_statement_liabilities"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/textcolor_title_attribute"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvLiabilities"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@android:color/transparent"
            android:gravity="right|center_vertical"
            android:singleLine="true"
            android:text="X.000 đ"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/textcolor_title_attribute"
            android:textStyle="bold"/>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.2dip"
        android:background="#504f4f"/>

    <LinearLayout
        android:id="@+id/llBorrowed"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp"
        android:weightSum="20">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:background="@android:color/transparent"
            android:text="@string/report_financial_statement_money_borrowed"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/tvBorrowed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="11"
            android:background="@android:color/transparent"
            android:gravity="right|center_vertical"
            android:text="10.000.000 đ"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/black"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_next"/>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.2dip"
        android:background="#504f4f"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/listview_account_transactions_parent_background"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp"
        android:weightSum="5">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@android:color/transparent"
            android:text="@string/report_financial_statement_net_worth"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/textcolor_title_attribute"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvNetWorth"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@android:color/transparent"
            android:gravity="right|center_vertical"
            android:singleLine="true"
            android:text="X.000 đ"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/textcolor_title_attribute"
            android:textStyle="bold"/>
    </LinearLayout>

</LinearLayout>