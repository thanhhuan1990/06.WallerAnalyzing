<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/background_main_frame"
              android:clickable="true"
              android:orientation="vertical">

    <ListView
        android:id="@+id/lvTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:cacheColorHint="@android:color/transparent"
        android:dividerHeight="0.2dp"
        android:divider="@color/listview_divider"
        android:scrollbars="none"/>

    <LinearLayout
        android:id="@+id/llOtherSetting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.2dip"
            android:background="#504f4f"/>

        <LinearLayout
            android:id="@+id/llFromDate"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="5dp"
            android:weightSum="20">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:background="@android:color/transparent"
                android:paddingLeft="50dp"
                android:text="@string/report_evi_viewedby_fromdate"
                android:textColor="@color/textcolor_title_attribute"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvFromDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="11"
                android:background="@android:color/transparent"
                android:gravity="right|center_vertical"
                android:text="DD/MM/YYYY"
                android:textColor="@android:color/black"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_next"/>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.2dip"
            android:background="#504f4f"/>

        <LinearLayout
            android:id="@+id/llToDate"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="5dp"
            android:paddingLeft="50dp"
            android:weightSum="20">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:background="@android:color/transparent"
                android:paddingLeft="50dp"
                android:text="@string/report_evi_viewedby_todate"
                android:textColor="@color/textcolor_title_attribute"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvToDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="11"
                android:background="@android:color/transparent"
                android:gravity="right|center_vertical"
                android:singleLine="true"
                android:text="DD/MM/YYYY"
                android:textColor="@android:color/black"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_next"/>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.2dip"
            android:background="#504f4f"/>
    </LinearLayout>
</LinearLayout>